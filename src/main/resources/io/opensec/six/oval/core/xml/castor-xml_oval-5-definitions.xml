    <class name="io.opensec.six.oval.model.definitions.MetadataType">
        <map-to xml="metadata"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            ns-prefix=""/>
        <field name="title" type="string">
            <bind-xml name="title" node="element"/>
        </field>
        <field name="affected" 
            type="io.opensec.six.oval.model.definitions.AffectedType"
            collection="collection">
            <bind-xml name="affected" node="element"/>
        </field>
        <field name="reference" 
            type="io.opensec.six.oval.model.definitions.ReferenceType"
            collection="collection">
            <bind-xml name="reference" node="element"/>
        </field>
        <field name="description" type="string">
            <bind-xml name="description" node="element"/>
        </field>
        <field name="additionalMetadata" 
            type="io.opensec.six.oval.model.OvalObject"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
<!--
        <field name="additionalMetadata" 
            type="io.opensec.six.oval.model.definitions.MetadataItem"
            collection="collection">
            <bind-xml auto-naming="deriveByClass" node="element"/>
        </field>
-->
    </class>

    <class name ="io.opensec.six.oval.model.definitions.MetadataItem"
        verify-constructable="false">
    </class>

    <class name="io.opensec.six.oval.model.definitions.AffectedType">
        <map-to 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5"/>
        <field name="family" 
            type="string"
            handler="io.opensec.six.oval.core.xml.common.FamilyEnumerationHandler">
            <!-- type="io.opensec.six.oval.model.common.FamilyEnumeration" -->
            <bind-xml name="family" node="attribute"/>
        </field>
        <field name="platform" 
            type="io.opensec.six.oval.model.definitions.Platform"
            collection="collection"
            get-method="iteratePlatform"
            set-method="addPlatform"
            >
            <bind-xml name="platform" node="element"/>
        </field>
        <field name="product" 
            type="io.opensec.six.oval.model.definitions.Product"
            collection="collection"
            get-method="iterateProduct"
            set-method="addProduct"
            >
            <bind-xml name="product" node="element"/>
        </field>
    </class>

    <class name="io.opensec.six.oval.model.definitions.Platform">
