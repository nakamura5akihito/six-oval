    <class name="io.opensec.six.oval.model.definitions.OvalDefinitions"
        extends="io.opensec.six.oval.model.Document">
        <map-to xml="oval_definitions"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            ns-prefix=""/>
<!--
        <field name="persistentID" type="string">
            <bind-xml name="pid" node="attribute"
            xmlns="http://aist.go.jp/six/oval"
            />
        </field>
-->

        <field name="generator" 
            type="io.opensec.six.oval.model.common.GeneratorType">
            <bind-xml name="generator" node="element"/>
        </field>
        <field name="definitions" 
            type="io.opensec.six.oval.model.definitions.DefinitionsType">
            <bind-xml name="definitions" node="element"/>
        </field>
        <field name="tests" 
            type="io.opensec.six.oval.model.definitions.TestsType">
            <bind-xml name="tests" node="element" />
        </field>
        <field name="objects" 
            type="io.opensec.six.oval.model.definitions.SystemObjectsType">
            <bind-xml name="objects" node="element"/>
        </field>
        <field name="states" 
            type="io.opensec.six.oval.model.definitions.StatesType">
            <bind-xml name="states" node="element"/>
        </field>
        <field name="variables" 
            type="io.opensec.six.oval.model.definitions.VariablesType">
            <bind-xml name="variables" node="element"/>
        </field>
    </class>

    <class name="io.opensec.six.oval.model.definitions.DefinitionsType">
        <map-to  xml="definitions"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            ns-prefix=""/>
        <field name="definition" 
            type="io.opensec.six.oval.model.definitions.DefinitionType"
            collection="collection">
            <bind-xml name="definition" node="element"/>
            <!-- 
            set-method="addDefinition"
            get-method="iterateDefinition"
            -->
        </field>
    </class>

    <class name="io.opensec.six.oval.model.definitions.DefinitionType"
        extends="io.opensec.six.oval.model.definitions.DefinitionsElement">
        <map-to xml="definition" 
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5"
            ns-prefix=""/>
        <field name="metadata" 
            type="io.opensec.six.oval.model.definitions.MetadataType">
            <bind-xml name="metadata" node="element"/>
        </field>
        <field name="notes" 
            type="io.opensec.six.oval.model.common.NotesType">
            <bind-xml name="notes" node="element"/>
        </field>
<!-- OVAL Language pre-5.11
        <field name="notes" 
            type="io.opensec.six.oval.model.definitions.NotesType">
            <bind-xml name="notes" node="element"/>
        </field>
-->
        <field name="criteria" 
            type="io.opensec.six.oval.model.definitions.CriteriaType">
            <bind-xml name="criteria" node="element"/>
        </field>
