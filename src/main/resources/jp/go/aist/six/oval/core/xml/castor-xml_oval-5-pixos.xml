    <!-- ******************************************************* -->
    <!-- version                                                 -->
    <!-- ******************************************************* -->
    <class name="jp.go.aist.six.oval.model.pixos.VersionTest"
        extends="jp.go.aist.six.oval.model.definitions.TestType">
        <map-to xml="pixos_version_test"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#pixos"
            ns-prefix=""/>
        <field name="object" 
            type="jp.go.aist.six.oval.model.definitions.SystemObjectRefType">
            <bind-xml name="object" node="element"/>
        </field>
        <field name="state" 
            type="jp.go.aist.six.oval.model.definitions.StateRefType"
            collection="collection">
            <bind-xml name="state" node="element"/>
        </field>
    </class>

    <class name="jp.go.aist.six.oval.model.pixos.VersionObject"
        extends="jp.go.aist.six.oval.model.definitions.SystemObjectType">
        <map-to xml="pixos_version_object"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#pixos"
            ns-prefix=""/>
    </class>

    <class name="jp.go.aist.six.oval.model.pixos.VersionState"
        extends="jp.go.aist.six.oval.model.definitions.StateType">
        <map-to xml="pixos_version_state"
            ns-uri="http://oval.mitre.org/XMLSchema/oval-definitions-5#pixos"
            ns-prefix=""/>
        <field name="pixRelease" 
            type="jp.go.aist.six.oval.model.definitions.EntityStateStringType">
            <bind-xml name="pix_release" node="element"/>
        </field>
        <field name="pixMajorRelease" 
            type="jp.go.aist.six.oval.model.definitions.EntityStateVersionType">
            <bind-xml name="pix_major_release" node="element"/>
        </field>
        <field name="pixMinorRelease" 
            type="jp.go.aist.six.oval.model.definitions.EntityStateVersionType">
            <bind-xml name="pix_minor_release" node="element"/>
        </field>
        <field name="pixBuild" 
            type="jp.go.aist.six.oval.model.definitions.EntityStateIntType">
            <bind-xml name="pix_build" node="element"/>
        </field>
    </class>

